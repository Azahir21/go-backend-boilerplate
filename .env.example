# Note: Rename this file to .env and update the values as needed.
# use _ as separator for nested key names in yaml files.
# example: storage.type in yaml becomes STORAGE_TYPE in .env
# or storage.s3.secret_access_key becomes STORAGE_S3_SECRET_ACCESS_KEY

# Server Configuration
SERVER_PORT=8080
GRPC_PORT=8090
GRAPHQL_PORT=8081
SERVER_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY_HOURS=72

# Default Admin User (for initial setup or testing)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# Goose Migration (if used directly, not via Ent)
GOOSE_DRIVER=postgres
GOOSE_DBSTRING=postgres://postgres:postgres@localhost:5432/go_boilerplate?sslmode=disable
GOOSE_MIGRATION_DIR=migrations