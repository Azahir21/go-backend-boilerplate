# Database Configuration
DB_NAME=go_boilerplate
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_SSL_MODE=disable

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY_HOURS=72

# Server Configuration
SERVER_PORT=8080
GRPC_PORT=8090
GRAPHQL_PORT=8081
SERVER_ENV=development

# Default Admin User (for initial setup or testing)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# Redis Configuration
REDIS_PORT=6379
REDIS_ADDR=localhost:6379 # For local connection outside docker-compose
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TYPE=redis # Options: redis, ristretto

# Minio (S3-compatible) Configuration
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
STORAGE_TYPE=s3 # Options: local, s3, gcs
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=mybucket
S3_ENDPOINT=http://localhost:9000 # For local connection outside docker-compose
S3_DISABLE_SSL=true
S3_FORCE_PATH_STYLE=true

# Goose Migration (if used directly, not via Ent)
GOOSE_DRIVER=postgres
GOOSE_DBSTRING=postgres://postgres:postgres@localhost:5432/go_boilerplate?sslmode=disable
GOOSE_MIGRATION_DIR=migrations